    window.currentUser = {
      "id": <%= current_user.id %>,
      "username": "<%= current_user.username %>",
      "channel_id": <%= current_user.id %> 
    };
  </script>
<% end %>
  </head>
    
  <body style="background-color:#FAFAFA">
    
    <%= yield %>
  </body>
</html>
