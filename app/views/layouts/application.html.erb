<!DOCTYPE html>
<html>
  <head>
    <title>iTube</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application.js' %>
<% if logged_in? %>
